generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Todo {
  id          Int      @id @default(autoincrement())
  titulo      String
  descricao   String?
  status      String   @default("pendente") // Exemplos de status: "pendente", "conclu√≠do"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}